{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Vivado Compile",
      "type": "shell",
      "command": "source setup.sh; proc/vsim proc/sim.f; cd sim/; make -f vivado_sim.mk -B",
      "problemMatcher": {
        "owner": "systemverilog",
        "fileLocation": "autoDetect",
        "pattern": {
          "regexp": "^(.*): (\\[.*\\].*) \\[(.*):([0-9]*)\\]$",
          "severity": 1,
          "message": 2,
          "file": 3,
          "line": 4
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}